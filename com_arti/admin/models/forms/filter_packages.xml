<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<!-- Text search -->
		<field
			name="search"
			type="text"
			label="LIB_LARA_FILTER_SEARCH"
			description="LIB_LARA_FILTER_SEARCH_DESC"
			hint="LIB_LARA_FILTER_SEARCH"
		/>

		<!-- Search tools -->
		<field
			name="type"
			type="list"
			label="COM_ARTI_FIELD_TYPE"
			onchange="this.form.submit();"
		>
			<option value="">COM_ARTI_OPTION_HEADER_TYPE</option>
			<option value="joomla_component">COM_ARTI_OPTION_JOOMLA_COMPONENT</option>
			<option value="joomla_frontend_module">COM_ARTI_OPTION_JOOMLA_FRONTEND_MODULE</option>
			<option value="joomla_system_pluglin">COM_ARTI_OPTION_JOOMLA_SYSTEM_PLUGIN</option>
			<option value="joomla_content_pluglin">COM_ARTI_OPTION_JOOMLA_CONTENT_PLUGIN</option>
			<option value="joomla_library">COM_ARTI_OPTION_JOOMLA_LIBRARY</option>
			<option value="composer_library">COM_ARTI_OPTION_COMPOSER_LIBRARY</option>
		</field>
	</fields>

	<fields name="list">
		<!-- Limit box -->
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="50"
			onchange="this.form.submit();"
		/>
	</fields>
</form>



