			name="instructions_field_project_path" 
			type="spacer" 
			label="COM_ARTI_INSTRUCTIONS_FIELD_PROJECT_PATH"
		/>
		<field
			name="update_server_url"
			type="text"
			label="COM_ARTI_FIELD_UPDATE_SERVER_URL"
			class="span6"
		/>
		<field
			name="instructions_field_update_server_url" 
			type="spacer" 
			label="COM_ARTI_INSTRUCTIONS_FIELD_UPDATE_SERVER_URL"
