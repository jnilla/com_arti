			name="author_email"
			type="text"
			label="COM_ARTI_FIELD_AUTHOR_EMAIL"
			required="true"
		/>
		<field
			name="author_url"
			type="text"
			label="COM_ARTI_FIELD_AUTHOR_URL"
			required="true"
