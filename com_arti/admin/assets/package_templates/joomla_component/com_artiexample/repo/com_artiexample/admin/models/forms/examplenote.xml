<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<!--DO_NOT_DELETE_THIS_COMMENT_01-->
		<fieldset 
			name="manifest" 
			label="COM_ARTIEXAMPLE_TAB_BASIC"
			>
			<field
				name="id"
				type="hidden"
			/>
			<field
				name="status"
				label="COM_ARTIEXAMPLE_FIELD_STATUS"
				type="list"
				default="active"
				required="true"
				>
				<option value="">COM_ARTIEXAMPLE_OPTION_HEADER_STATUS</option>
				<option value="active">COM_ARTIEXAMPLE_OPTION_ACTIVE</option>
				<option value="inactive">COM_ARTIEXAMPLE_OPTION_INACTIVE</option>
			</field>
			<field
				name="title"
				type="text"
				label="COM_ARTIEXAMPLE_FIELD_TITLE"
				required="true"
			/>
		</fieldset>
		<fieldset 
			name="notes" 
			label="COM_ARTIEXAMPLE_TAB_NOTES"
			>
			<field
				name="note"
				type="textarea"
				label="COM_ARTIEXAMPLE_FIELD_NOTE"
				class="span6"
				rows="15"
			/>
		</fieldset>
	</fields>
</form>




