<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<!-- Text search -->
		<field
			name="search"
			type="text"
			label="LIB_LARA_FILTER_SEARCH"
			description="LIB_LARA_FILTER_SEARCH_DESC"
			hint="LIB_LARA_FILTER_SEARCH"
		/>

		<!-- Search tools -->
		<field
			name="status"
			label="COM_ARTIEXAMPLE_FIELD_STATUS"
			type="list"
			default=""
			onchange="this.form.submit();"
			>
			<option value="">COM_ARTIEXAMPLE_OPTION_HEADER_STATUS</option>
			<option value="active">COM_ARTIEXAMPLE_OPTION_ACTIVE</option>
			<option value="inactive">COM_ARTIEXAMPLE_OPTION_INACTIVE</option>
		</field>
	</fields>

	<fields name="list">
		<!-- Limit box -->
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="50"
			onchange="this.form.submit();"
		/>
	</fields>
</form>



